@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Konfrut AG | K-ONE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.png">
    <!-- Bootstrap CSS -->
    <link href="~/Theme/HTML/dist/assets/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Fontawesome CSS -->
    <link href="~/css/fontawesome-all.min.css" rel="stylesheet" />
    <!-- Flaticon CSS -->
    <link href="~/font/flaticon.css" rel="stylesheet" />
    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/login-style.css" rel="stylesheet" />
</head>

<body>
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div id="preloader" class="preloader">
        <div class='inner'>
            <div class='line1'></div>
            <div class='line2'></div>
            <div class='line3'></div>
        </div>
    </div>

    <section class="fxt-template-animation fxt-template-background">
        <div class="container">
            <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
                <div class="col-md-6 col-lg-4">
                    <div class="fxt-heading-content text-center">
                        <div class="fxt-inner-wrap">
                            <a href="#" class="fxt-logo mb-4"><img src="~/Theme/HTML/dist/assets/images/brand-logos/K-ONE-beyaz.png" alt="Logo" width="250"></a>
                            <div class="fxt-sub-title mb-3">Firma Seçimi</div>
                            <form asp-action="FirmGuidance" asp-controller="Account">
                                <div class="form-group mb-3">
                                    <select class="form-select" aria-label="Firma Seçimi">
                                        <option selected>Konfrut AG</option>
                                        <option value="1">Konfrut GAP</option>
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <button type="submit" class="btn btn-konfrut-gradient btn-wave waves-effect waves-light w-100">Seç</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- JQuery -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Imagesloaded JS -->
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <!-- Validator JS -->
    <script src="~/js/validator.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/main.js"></script>
</body>

</html>
