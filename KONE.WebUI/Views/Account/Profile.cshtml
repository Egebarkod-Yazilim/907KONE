@model AddOrUpdateUser
<div class="card custom-card overflow-hidden">
    <div class="card-body p-0 main-profile-card-body">
        <div class="d-sm-flex align-items-top p-4 border-bottom-0 main-profile-cover">
            <div>
                <span class="avatar avatar-xxl avatar-rounded me-3">
                    <img src="@Model.UserImage" />
                </span>
            </div>
            <div class="flex-fill main-profile-info">
                <div class="d-flex align-items-center justify-content-between">
                    <h6 class="fw-semibold mb-1 text-fixed-white h2 pt-4">@Model.FirstName @Model.LastName</h6>
                </div>
            </div>
        </div>
        <div class="p-4 border-bottom border-block-end-dashed">
            <p class="fs-15 mb-2 me-4 fw-semibold">Bilgiler :</p>
            <div class="text-muted">
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="ri-mail-line align-middle fs-30 text-konfrut-light-4"></i>
                    </span>
                    <span class="fw-semibold">E-posta : </span>
                    @Model.Email
                </p>
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="ri-phone-line align-middle fs-30 text-konfrut-light-3"></i>
                    </span>
                    <span class="fw-semibold">Telefon Numarası : </span>
                    @Model.PhoneNumber
                </p>
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="bx bx-id-card align-middle fs-30 text-konfrut-light-5"></i>
                    </span>
                    <span class="fw-semibold">Kimlik Numarası : </span>
                    @Model.IdentifierNumber
                </p>
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="bi bi-123 align-middle fs-30 text-konfrut-light-2"></i>
                    </span>
                    <span class="fw-semibold">KGK Kayıt Numarası : </span>
                    @Model.KGKRegistrationNumber
                </p>
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="bi bi-123 align-middle fs-30 text-konfrut-light-1"></i>
                    </span>
                    <span class="fw-semibold">Seri Numarası: </span>
                    @Model.SerialNumber
                </p>
                <p class="mb-2">
                    <span class="avatar avatar-lg avatar-rounded me-2 text-muted">
                        <i class="bx bx-calendar align-middle text-konfrut-light-5 fs-30"></i>
                    </span>

                    <span class="fw-semibold">Doğum Günü : </span>
                    @Model.BirthDate
                </p>
            </div>
        </div>
        <div class="p-4 border-bottom border-block-end-dashed">
            <p class="fs-15 mb-2 me-4 fw-semibold">Roller :</p>
            <div id="role-badges-div">
                @foreach (var role in Model.Roles)
                {
                    <a href="javascript:void(0);">
                        <span class="badge m-1 text-light">@role.Name</span>
                    </a>
                }
            </div>
        </div>
        <div class="p-4">
            <p class="fs-15 mb-2 me-4 fw-semibold">Şirketler :</p>
            <div class="col-sm-4">
                <div class="card custom-card border-top-bottom-card border-top-bottom-primary rounded-2">
                    <div class="card-body p-0">
                        <div class="p-3">
                            <div class="d-flex flex-wrap mb-1">
                                <a href="javascript:void(0);" class="pe-2">
                                    <span class="avatar border text-muted text-primary"><i class="ri-apple-fill fs-18"></i></span>
                                </a>
                                <div class="flex-fill mt-2">
                                    <div class="d-flex flex-wrap align-items-center justify-content-between mb-1">
                                        <span class="fw-semibold">Şirket 1</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/userinfo.js" defer></script>