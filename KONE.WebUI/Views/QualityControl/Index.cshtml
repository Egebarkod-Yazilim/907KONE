            ]
        };

        // İl seçildiğinde ilçe listesini doldur
        $('#il-select').change(function () {
            const il = $(this).val();
            const $ilceSelect = $('#ilce-select');
            const $adaParselSelect = $('#ada-parsel-select');

            $ilceSelect.empty();
            $adaParselSelect.empty();

            if (il) {
                $ilceSelect.append('<option value="">Lütfen bir ilçe seçin</option>');
                ilceler[il].forEach(function (ilce) {
                    $ilceSelect.append('<option value="' + ilce + '">' + ilce + '</option>');
                });
            } else {
                $ilceSelect.append('<option value="">Lütfen önce bir il seçin</option>');
            }

            // İlçe ve ada-parsel seçimini sıfırlayalım
            $ilceSelect.val(null).trigger('change');
            $adaParselSelect.append('<option value="">Lütfen önce bir ilçe seçin</option>');
        });

        // İlçe seçildiğinde ada-parsel listesini doldur
        $('#ilce-select').change(function () {
            const ilce = $(this).val();
