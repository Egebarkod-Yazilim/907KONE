@model UserDetailModel
@{
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/Theme/HTML/dist/assets/libs/choices.js/public/assets/styles/choices.min.css" />
}

@await Html.PartialAsync("_Breadcrumb", new KONE.KOne.WebUI.Models.BreadCrumb.BreadCrumbViewModel
{
    HeaderTitle = "Kullanıcı Detayları",
    PageNames = new List<string>() { "Admin", "Anasayfa", "Index", "Cari Kartlar" },
    Url = "/Admin/Home/Index"
})

<div class="card custom-card">
    <div class="card-header">
        <div class="card-title">
            Kullannıcı Detayları
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs tab-style-2 nav-justified mb-3 d-sm-flex d-block" id="myTab1" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="order-tab" data-bs-toggle="tab" data-bs-target="#order-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true" tabindex="-1"><i class="bi bi-person-bounding-box me-1 align-middle"></i>Kullanıcı Bilgileri</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="confirmed-tab" data-bs-toggle="tab" data-bs-target="#confirm-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false"><i class="bi bi-box-arrow-in-left me-1 align-middle"></i>Giriş - Çıkış Bilgileri</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="shipped-tab" data-bs-toggle="tab" data-bs-target="#shipped-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false" tabindex="-1"><i class="bi bi-card-checklist me-1 align-middle"></i>Aktiviteler</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active text-muted" id="order-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                @await Component.InvokeAsync("UserCardViewComponents", new { id = Model.UserId })
            </div>
            <div class="tab-pane fade text-muted" id="confirm-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                @await Component.InvokeAsync("UserLoginHistoryViewComponents", new { id = Model.UserId })
            </div>
            <div class="tab-pane fade text-muted" id="shipped-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                @await Component.InvokeAsync("UserActivityViewComponents", new { id = Model.UserId })
            </div>
        </div>
    </div>
</div>


