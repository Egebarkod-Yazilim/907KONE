@model AddOrUpdateRoleClaim

<div class="col-xl-12">
    <div class="card custom-card">
        <form asp-controller="Role" asp-action="AddOrUpdateRoleClaim" method="post">
            <input type="hidden" asp-for="RoleId" />
            <div class="card-header justify-content-between">
                <div class="card-title">
                    Rol Erişim Ayarları
                </div>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="roleclaimtable" class="table text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col" class="nonsearchable">
                                    <input class="form-check-input" type="checkbox"
                                           id="checkboxNoLabel" value="" aria-label="...">
                                </th>
                                <th scope="col">Ayar Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.RolePermissions.Count(); i++)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="form-check form-check-md d-flex align-items-center">
                                            <input class="form-check-input" type="checkbox" 
                                            asp-for="@Model.RolePermissions[i].IsSelected">

                                            <input type="hidden" asp-for="@Model.RolePermissions[i].PermissionId" />
                                        </div>
                                    </th>
                                    <td>
                                        <input type="hidden" asp-for="@Model.RolePermissions[i].PermissionName" />
                                        <input type="hidden" asp-for="@Model.RolePermissions[i].PermissionNote" />
                                        @Model.RolePermissions[i].PermissionNote
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


                <div class="d-flex flex-wrap gap-2">
                    @*  <a class="btn btn-info btn-wave waves-effect waves-light"><span class="bi bi-check-all">Tüm Erişim Kontrol Listesi</span></a> *@
                    <a asp-controller="Role" asp-action="AllRolePermission" class="btn btn-icon btn-primary-transparent rounded-pill btn-wave">
                        <i class="bi bi-list-columns-reverse"></i>
                    </a>
                    <button type="submit" class="btn btn-green-knfrt"><span class="bi bi-check-all"> Kaydet</span></button>
                </div>
            </div>
            <div class="card-footer d-none border-top-0">
            </div>
        </form>
    </div>
</div>


<script src="~/js/roleclaimsettings.js" defer></script>
