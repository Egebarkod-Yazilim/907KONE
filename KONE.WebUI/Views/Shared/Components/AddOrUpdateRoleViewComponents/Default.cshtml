@model AddOrUpdateRole

<div class="col-12">
    <div class="card custom-card shadow">
        <form id="roleform" asp-controller="Role" asp-action="AddOrUpdateRole" method="post">
            <div class="card-header justify-content-between">
                <div class="card-title">
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-success btn-wave waves-effect waves-light"><span class="bi bi-check-all">Kaydet</span></button>
                    @if(Model.Id != null || Model.Id != 0)
                    {
                        <button asp-action="Delete" asp-controller="Role" asp-route-id="@Model.Id" formmethod="post" class="btn btn-danger btn-wave waves-effect waves-light"><span class="bi bi-cross-all">Sil</span></button>
                    }
                </div>
            </div>

            <div class="card-body">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <div class="card">
                            <div class="card-header konfrut-backgroud-color-important">
                                <h6><span class="bi bi-person-fill"></span> Rol </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Ad</label>
                                        <input type="text" class="form-control form-control-light" placeholder="Ad" aria-label="Ad" asp-for="@Model.Name" />
                                    </div>
                                    <div class="col-md-6" style="margin-top:2rem;">
                                        <div class="form-check mt-2">
                                            <input class="form-check-input form-checked-outline form-checked-success" type="checkbox" asp-for="IsActive">
                                            <label class="form-check-label" for="successoutlineChecked">
                                                Aktif mi?
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

